{
    "name": "gestion-ecoles/app",
    "description": "Système de gestion des écoles permettant de gérer les filières, les modules, les apprenants, les formateurs et les évaluations",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Votre Nom",
            "email": "votre.email@example.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^2.9",
        "phpmailer/phpmailer": "^6.8",
        "firebase/php-jwt": "^6.4",
        "guzzlehttp/guzzle": "^7.5",
        "intervention/image": "^2.7",
        "phpoffice/phpspreadsheet": "^1.29",
        "dompdf/dompdf": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.14",
        "mockery/mockery": "^1.5",
        "fakerphp/faker": "^1.23",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "config/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"if (!is_dir('logs')) { mkdir('logs', 0755, true); }\"",
            "@php -r \"if (!is_dir('cache')) { mkdir('cache', 0755, true); }\""
        ],
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "check-style": [
            "phpcs src tests",
            "php-cs-fixer fix --dry-run --diff"
        ],
        "fix-style": [
            "phpcbf src tests",
            "php-cs-fixer fix"
        ],
        "analyse": "phpstan analyse src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
} 